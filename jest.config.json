{
  "preset": "ts-jest/presets/default-esm",
  "testEnvironment": "node",
  "extensionsToTreatAsEsm": [".ts"],
  "moduleFileExtensions": ["js", "ts", "tsx"],
  "moduleNameMapper": {
    "^(\\.\\.?\\/.+)\\.js$": "$1"
  },
  "transform": {
    "^.+\\.ts$": [
      "ts-jest",
      {
        "useESM": true
      }
    ]
  },
  "testMatch": ["**/*.spec.ts"]
}
